{
  "name": "image-viewer-pro",
  "version": "1.0.0",
  "description": "Professional image viewer with EXR support",
  "main": "src/main/main.js",
  "author": "Leonardo Shiguemi Dinnouti",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "start:dev": "electron . --dev",
    "build": "electron-builder",
    "setup": "node scripts/setup.js",
    "backend": "python src/backend/server.py",
    "test": "node scripts/test.js"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.imageviewer.pro",
    "productName": "Image Viewer Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      "src/backend/**/*"
    ]
  }
}